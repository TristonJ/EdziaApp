<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.seo.ezdia.seoapp.Add_Info_Activity">

    TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AMS upper bound"
        android:id="@+id/tv_add_info_upper_bounds"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/et_add_info_ams_upper"
        android:layout_below="@+id/tv_add_info_upper_bounds"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:hint="Numeric value"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AMS lower bound"
        android:id="@+id/tv_add_info_lower_bounds"
        android:textSize="20sp"
        android:layout_below="@+id/et_add_info_ams_upper"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/et_add_info_ams_lower"
        android:hint="Numeric value"
        android:layout_below="@+id/tv_add_info_lower_bounds"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ams_description"
        android:id="@+id/tv_add_info_ams_description"
        android:layout_below="@+id/et_add_info_ams_lower"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textSize="14sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/bt_add_info_done"
        android:layout_below="@+id/tv_add_info_ams_description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:longClickable="false"
        android:textColor="@android:color/white"
        android:background="#ff4797ff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel "
        android:id="@+id/tv_add_info_cancel"
        android:layout_toRightOf="@+id/bt_add_info_done"
        android:layout_toEndOf="@+id/bt_add_info_done"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@+id/bt_add_info_done"
        android:textSize="16sp"
        android:textColor="#ff4797ff"/>

    <View
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="31dp"
        android:id="@+id/dv_submit_vertical_divider"
        android:layout_height="2dp"
        android:layout_width="fill_parent"
        android:background="@android:color/black"/>

</RelativeLayout>
