<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.seo.ezdia.seoapp.activity.Order_Activity"
    android:id="@+id/rl_order">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/iv_order_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffff0007"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Campaign Name"
        android:id="@+id/tv_order_campaign_name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_order_icon"
        android:layout_toEndOf="@+id/iv_order_icon"
        android:textSize="32sp"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/iv_order_campaign_status"
        android:layout_below="@+id/iv_order_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:background="#ff4cb8ff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="An Item"
        android:id="@+id/tv_order_item"
        android:textSize="32sp"
        android:layout_below="@+id/iv_order_campaign_status"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Primary keyword"
        android:id="@+id/tv_order_primary"
        android:layout_below="@+id/tv_order_item"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pending..."
        android:id="@+id/tv_order_primary_status"
        android:layout_below="@+id/tv_order_primary"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:textSize="22sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Primary targeted keyword"
        android:id="@+id/tv_order_primary_targeted"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_below="@+id/tv_order_primary_status"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pending..."
        android:id="@+id/tv_order_primary_targeted_status"
        android:textSize="22sp"
        android:layout_below="@+id/tv_order_primary_targeted"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secondary keyword(s)"
        android:id="@+id/tv_order_secondary"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_below="@+id/tv_order_primary_targeted_status"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pending..."
        android:id="@+id/tv_order_secondary_status"
        android:textSize="22sp"
        android:layout_below="@+id/tv_order_secondary"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"/>

    <View
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="31dp"
        android:id="@+id/dv_submit_horizontal_divider"
        android:layout_height="2dp"
        android:layout_width="fill_parent"
        android:background="@android:color/black"/>
</RelativeLayout>
